<section id="proposta" class="py-20 lg:py-32 bg-white">
  <div class="container-section">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- Content -->
      <div class="space-y-8">
        <div>
          <span class="badge mb-6">LA NOSTRA PROPOSTA</span>
          <h2 class="text-4xl lg:text-5xl font-bold mb-6 leading-tight">
            Per què <span class="text-gradient">eComm360</span>?
          </h2>
