<section id="contacte" class="py-20 lg:py-32 bg-gray-50">
  <div class="container-section">
    <div class="grid lg:grid-cols-2 gap-12 items-start">
      <!-- Informació de contacte -->
      <div>
        <h2 class="text-4xl lg:text-5xl font-bold mb-6">
          Parlem del teu <span class="text-gradient">projecte</span>
        </h2>
        <p class="text-lg text-ecomm-gray mb-8 leading-relaxed">
          Estàs a punt per llançar la teva nova botiga online o portar el teu eCommerce al següent nivell? Contacta amb el nostre equip d'experts i descobreix com podem transformar la teva visió en una plataforma eCommerce d'èxit.
        </p>
        
        <div class="space-y-6">
          <div class="flex items-center gap-4">
            <div class="w-10 h-10 bg-ecomm-turquoise/10 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-ecomm-turquoise" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
            </div>
            <a href="mailto:info@ecomm360.es" class="text-ecomm-blue hover:text-ecomm-turquoise font-semibold">info@ecomm360.es</a>
          </div>
          <div class="flex items-center gap-4">
            <div class="w-10 h-10 bg-ecomm-turquoise/10 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-ecomm-turquoise" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
            </div>
            <a href="tel:+34933903137" class="text-ecomm-blue hover:text-ecomm-turquoise font-semibold">(+34) 933 903 137</a>
          </div>
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 bg-ecomm-turquoise/10 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-ecomm-turquoise" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
            </div>
            <div>
              <span class="font-semibold text-ecomm-blue">Pla. Urquinaona, 6, 14B</span>
              <span class="block text-ecomm-gray">08010, Barcelona, España</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Formulari de contacte -->
      <div class="bg-white p-8 rounded-lg shadow-lg border border-gray-100">
        <form id="contact-form" class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-medium text-ecomm-gray mb-1">Nom complet</label>
            <input type="text" id="name" name="name" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-ecomm-turquoise focus:border-ecomm-turquoise">
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-ecomm-gray mb-1">Email</label>
            <input type="email" id="email" name="email" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-ecomm-turquoise focus:border-ecomm-turquoise">
          </div>
          <div>
            <label for="phone" class="block text-sm font-medium text-ecomm-gray mb-1">Telèfon</label>
            <input type="tel" id="phone" name="phone" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-ecomm-turquoise focus:border-ecomm-turquoise">
          </div>
          <div>
            <label for="company" class="block text-sm font-medium text-ecomm-gray mb-1">Empresa (opcional)</label>
            <input type="text" id="company" name="company" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-ecomm-turquoise focus:border-ecomm-turquoise">
          </div>
          <div>
            <label for="message" class="block text-sm font-medium text-ecomm-gray mb-1">Missatge (opcional)</label>
            <textarea id="message" name="message" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-ecomm-turquoise focus:border-ecomm-turquoise"></textarea>
          </div>
          <div>
            <button type="submit" class="btn-primary w-full">Enviar sol·licitud</button>
          </div>
        </form>
        <div id="form-status" class="mt-4 text-center"></div>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('contact-form');
  const formStatus = document.getElementById('form-status');

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    formStatus.innerHTML = '<p class="text-ecomm-blue">Enviant...</p>';

    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());

    try {
      const response = await fetch('/api/leads', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      });

      if (response.ok) {
        form.reset();
        formStatus.innerHTML = '<p class="text-green-600">Gràcies! Hem rebut la teva sol·licitud correctament.</p>';
      } else {
        throw new Error('Error en la sol·licitud');
      }
    } catch (error) {
      formStatus.innerHTML = '<p class="text-red-600">Hi ha hagut un error. Si us plau, intenta-ho de nou més tard.</p>';
    }
  });
</script>
